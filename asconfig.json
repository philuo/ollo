{
  "entries": ["src/assembly/index"],
  "targets": {
    "release": {
      "outFile": "dist/ollo.wasm",
      "textFile": "dist/ollo.wat",
      "sourceMap": false,
      "optimizeLevel": 3,
      "shrinkLevel": 2,
      "noAssert": true,
      "runtime": "minimal"
    },
    "debug": {
      "outFile": "dist/ollo.debug.wasm",
      "textFile": "dist/ollo.debug.wat",
      "sourceMap": true,
      "debug": true,
      "runtime": "stub"
    }
  },
  "options": {
    "bindings": "esm",
    "exportRuntime": false,
    "transform": [],
    "use": ["Math=NativeMath"],
    "enable": ["simd", "threads", "bulk-memory", "sign-extension"],
    "disable": ["mutable-globals"],
    "exportTable": false,
    "exportStart": false,
    "sharedMemory": true,
    "importMemory": false,
    "initialMemory": 1024,
    "maximumMemory": 8192
  }
}
